<p id="notice"><%= notice %></p>
<section class="container">
    <div class="row product-show">
        <div class="col-xs-4">
            <p class="thumbnail">
                <%= image_tag(@product.image_url, width: "400") %>
            </p>
        </div>
        <div class="col-xs-4">
            <p>
                <strong>Name:</strong>
                <%= @product.name %>
            </p>

            <p>
                <strong>Description:</strong>
                <%= @product.description %>
            </p>

            <p>
                <strong>Color:</strong>
                <%= @product.colour %>
            </p>
        </div>
        <div class="col-xs-4">
            <p>
                <strong>Price:</strong>
                <span>$</span><%= @product.price %>
            </p>
            <p>
                Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <%= render 'new_comment' %>
        </div>
        <div class="col-md-6">
            <%= render 'comments' %>
        </div>
    </div>
    <%= link_to 'Edit', edit_product_path(@product) %> |
    <%= link_to 'Back', products_path %>
</section>
