<section class="container">
    <p id="notice"><%= notice %></p>

    <h1>Our Bikes!</h1>
    
    <div class="row">
        <div class="col-xs-2">
            <h3>Name</h3>
        </div>
        <div class="col-xs-2">
            <h3>Description</h3>
        </div>
        <div class="col-xs-2">
            <h3>Image URL</h3>
        </div>
        <div class="col-xs-2">
            <h3>Colour</h3>
        </div>
        <div class="col-xs-2">
            <h3>Price</h3>
        </div>
        <div class="col-xs-2">
            <h3>Options</h3>
        </div>
    </div>

        <% @products.each do |product| %>
    <div class="row">
        <div class="col-xs-2">
            <%= product.name %>
        </div>
        <div class="col-xs-2">
            <%= product.description %>
        </div>
        <div class="col-xs-2">
            <%= product.image_url %>
        </div>
        <div class="col-xs-2">
            <%= product.colour %>
        </div> 
        <div class="col-xs-2">
            <%= product.price %>
        </div> 
        <div class="col-xs-2">
        <%= link_to 'Show', product %>
        <%= link_to 'Edit', edit_product_path(product) %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
    </div>
        <% end %>

    <br>

    <%= link_to 'New Product', new_product_path %>
</section>